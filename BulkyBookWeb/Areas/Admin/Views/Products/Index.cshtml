@model IEnumerable<Product>

@{
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create new Product</a>
        </div>
    </div>


    <table id="tblData" class="table table-striped table-border">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
        
    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

