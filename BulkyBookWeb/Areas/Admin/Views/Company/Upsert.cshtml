
@model Company
@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = "_Layout";
}
<form method="post"a asp-action="Upsert" enctype="multipart/form-data">
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
        <div class="col-12 pb-2">
            <h2 class="text-primary">@(Model.Id!=0?"Update":"Create") Company</h2>
            <hr />
        </div>
        <input asp-for="@Model.Id" hidden/>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control"/>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StreetAddress"></label>
            <input asp-for="@Model.StreetAddress" rows="3" class="form-control"/>
            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="@Model.City"></label>
            <input asp-for="@Model.City" class="form-control"/>
            <span asp-validation-for="@Model.City" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="@Model.State"></label>
            <input asp-for="@Model.State" class="form-control"/>
            <span asp-validation-for="@Model.State" class="text-danger"></span>
        </div>
         <div class="mb-3 col-6">
            <label asp-for="@Model.PhoneNumber"></label>
            <input asp-for="@Model.PhoneNumber" class="form-control"/>
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>


                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
                </div>
    </div>
        </div>
        
    </div>

    
   

</form>
