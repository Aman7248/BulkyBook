@model IEnumerable<Category>

@{
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>


<table class="table table-striped table-border">
    <tr>
        <th>Name</th>
        <th>Display Order</th>
        <th>Actions</th>
    </tr>
    
        @foreach(var obj in Model)
        {
            <tr width="50%">
            <td>@obj.Name</td>
            <td>@obj.Displayorder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a style="width:90px" class="btn btn-secondary" asp-action="Edit" asp-controller="Category" asp-route-id=@obj.Id>
                        <i class="bi bi-pencil-square"></i>Edit</a>
                        &nbsp;
                    <a style="width:90px" class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id=@obj.Id>
                        <i class="bi bi-trash3-fill"></i>Delete</a>
                </div>
            </td>
            </tr>
        }
    
</table>
</div>

